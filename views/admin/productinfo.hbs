

<style>
    .product-text {
        font-weight: bolder;
    }

    #unblock{
      background-color: red;
    }
    #btn-edit {
    color: #fff; 
    background-color: #1C8A7F;
    border-color: #1C8A7F;
    transition: none;
    cursor: pointer; 
    outline: none; 
}

</style>

<body>
    <main class="main-wrap">
        <section class="content-main">
            <div class="content-header">
                
                    <div class="col-lg-6  d-flex justify-content-start">
                      <h2 class="content-title card-title">Products</h2>
                   </div>
                    <div class="col-lg-6  d-flex justify-content-end">
                      <a href="/admin/addproducts">
                      <button type="button" class="btn btn-dark" >Add Products</button>
                      </a>
                    </div>
                
            </div>
            
            <div class="card mb-4">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr class="text-center">
                                    <th scope="col">Product</th>
                                    <th scope="col">Image</th>
                                    <th scope="col">Category</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Stock</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                               {{#each product}}
                                <tr class="text-center">
                                    <td>{{this.productname}}</td>
                                    <td><img src="/uploads/{{this.images.[0]}}" style="max-width: 30px; max-height: 30px;"></td>
                                    <td>{{this.category}}</td>
                                    <td>{{this.price}}</td>
                                    <td>{{this.stock}}</td>
                                    <td>
                                     <a href="/admin/editproducts/{{this._id}}"> 
                                     <button type="button" id ="btn-edit" class="btn ">Edit</button>
                                     </a>
                                     <button type="button" class="btn btn-danger" onclick="softdelete('{{this._id}}')">Delete</button>
                                     </td>
                                    {{!-- <td><span class="badge rounded-pill alert-warning">{{this.paymentStatus}}</span></td> --}}
                                    {{!-- <td>{{this.orderDate}}</td> --}}
                                    
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    All rights reserved
                </div>
            </div>
        </footer>
    </main>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/javascript/orderCancel.js"></script>
    <script src="assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="assets/js/vendors/select2.min.js"></script>
    <script src="assets/js/vendors/perfect-scrollbar.js"></script>
    <script src="assets/js/vendors/jquery.fullscreen.min.js"></script>
    <script src="assets/js/main.js" type="text/javascript"></script>
</body>


