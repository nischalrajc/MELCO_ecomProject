<style>
    a{
    text-decoration: none;
    color: black;
    font-family: 'Palanquin';
    font-weight: bold;
} 
h3{
  font-weight: bold;
}
.btn-banner{
  background-color: rgb(219, 219, 45);
  padding: 10px 10px;
  border: none;
  border-radius: 15px;
}
#shopnow{
  text-align: center;
  display: flex;
  justify-content: center; 
  align-items: center; 
  text-align: center;
}
.latest_block{
  background-color: #e4b67d;
}
.cardProduct{
  font-weight: 1000;
}
.footer{
  background-color: rgb(41, 38, 38);
  color: rgb(223, 223, 223);
}
#footIcon{
  color: rgba(242, 240, 240, 0.953);
  font-weight: 100;
}
.footHead{
font-weight: bold;
}
.footbody{
  font-weight: 100;
}
.banner-title {
  font-size: 1rem;
}
.banner-description {
  font-size: 2rem;
}
@media (max-width: 768px) {
  .banner-title {
    font-size: 0.8rem;
  }
  
  .banner-description {
    font-size: 1.5rem;
  }
}
@media (max-width: 576px) {
  .banner-title {
    font-size: .5rem;
  }
  
  .banner-description {
    font-size: 1rem;
  }
}
.btn-shopCollection:hover{
  background-color: black;
  color: white;
}



</style>
<body>
<section>
    <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner pt-2">
          <div class="carousel-item active">
            <img src="/images/carrosol2.jpg" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="/images/carrosol1.jpg" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="/images/LP_D_HB_43_Colour_rush_V2_05_Sec.gif" class="d-block w-100" alt="...">
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
</section>

<section>
    <div class="container-fluid pt-2">
        <div class="row no-gutters">
          <div class="col-sm-8 px-0 mx-1 position-relative">
            <a href="/men">
            <img src="/images/AS_D_Gender_Men_01.jpeg" class="img-fluid w-100" alt="Responsive image 1"  style="height: 100%; width: 100%;">
            </a>
            <div class="position-absolute text-white" style="top: 85%; left: 50%; transform: translate(-50%, -50%);">
                <h3>MEN</h3>
            </div>
          </div>
          <div class="col px-0 mx-1 position-relative">
            <a href="/women">
            <img src="/images/AS_D_Gender_Category_Women_01.jpeg" class="img-fluid w-100" alt="Responsive image 2"  style="height: 100%; width: 100%;">
            </a>
            <div class="position-absolute text-white" style="top: 85%; left: 50%; transform: translate(-50%, -50%);">
                <h3>WOMEN</h3>
            </div>
          </div>
        </div>
    </div>
</section>

<section class="container">
  <div class="mt-2">
  <hr>
  </div>
</section>

<section>
  <div class="container">
    <div class="row py-4" id="shopnow">
      <i class="bi bi-cart4"></i>
           SHOP OUR TOP COLLECTIONS <br>
      Explore Our Collection of Trendsetting Styles Handpicked For You
    </div>
  </div>
</section>

{{#each banner}}
  {{#indexEquals @index 0}}
    <section style="overflow-x:hidden">
      <div class="mt-4">
        <div class="row position-relative">
          <img src="/uploads/{{this.images.[0]}}" class="img-fluid" alt="bannerImage" width="100%">
          <div class="position-absolute text-white" style="top: 50%; left: 50%; transform: translate(-50%, -50%);text-align: center">
           <span class="banner-title">{{this.banner_tittle}}</span> 
           
              <h2 class="banner-description">
                 <a class="text-white" href="/women">
                <i class="bi bi-coin"></i>
                {{this.description}}
                 </a>
              </h2>
           
          </div>
        </div>
      </div>
    </section>
  {{/indexEquals}}
{{/each}}

<section>
  <div class="container mt-4">
    <div class="row py-4" id="shopnow">
          <i class="bi bi-globe"></i> REFRESH YOUR STYLE <br>
      The perfect blend of style and performance. Explore Perform Collection.
    </div>
      <div class="row d-flex justify-content-center mt-1">
        {{#each latest}}
        <div class="col-lg-3 col-md-4 col-sm-6 col-6">
          <div class="card text-center" >
            <a href="/product_details/{{this._id}}">
          <img src="/uploads/{{this.coverImage}}" class="card-img-top" alt="...">
            </a>
          <div class="card-body">
            <span class="cardProduct">{{this.productname}}</span>
            <p class="card-text">{{this.description}}</p>
          </div>
        </div>
        </div>
        {{/each}}
     </div>
  </div>
</section>

{{#each banner}}
  {{#indexEquals @index 2}}
    <section>
      <div class="container my-5">
        <div class="row">
          <div class="col">
            <img src="/uploads/{{this.images.[0]}}" class="img-fluid" alt="bannerImage"> 
          </div>
            <div class="col d-flex flex-column align-items-center justify-content-center ">
              <div class="row">
              <h3>{{this.banner_tittle}}</h3>
              </div>
              <div class="row">
              <p>{{this.description}}</p>
              </div>
              <div class="row">
                <a href="/men">
              <button class="btn-shopCollection px-4 py-3">SHOP COLLECTION</button>
                </a>
              </div>
            </div>
        </div>
      </div>
    </section>
  {{/indexEquals}}
{{/each}}

{{#each banner}}
  {{#indexEquals @index 3}}
    <section>
      <div class="container my-5">
        <div class="row">
            <div class="col d-flex flex-column align-items-center justify-content-center ">
              <div class="row">
              <h3>{{this.banner_tittle}}</h3>
              </div>
              <div class="row">
              <p>{{this.description}}</p>
              </div>
              <div class="row">
                <a href="/men">
              <button class="btn-shopCollection px-4 py-3">SHOP COLLECTION</button>
                </a>
              </div>
            </div>
            <div class="col">
            <img src="/uploads/{{this.images.[0]}}" class="img-fluid" alt="bannerImage"> 
            </div>
        </div>
      </div>
    </section>
  {{/indexEquals}}
{{/each}}



{{#each banner}}
  {{#indexEquals @index 1}}
    <section style="overflow-x:hidden">
      <div class="mt-5">
        <div class="row position-relative">
          <img src="/uploads/{{this.images.[0]}}" class="img-fluid" alt="bannerImage" width="100%">
          <div class="position-absolute text-white" style="top: 50%; left: 50%; transform: translate(-50%, -50%);text-align: center">
            <span class="banner-title">{{this.banner_tittle}}</span>
              <h2  class="banner-description">
                <a class="text-white" href="/kids">
                <i class="bi bi-box-seam"></i>
                {{this.description}}
            </a>
              </h2>
          </div>
        </div>
      </div>
    </section>
  {{/indexEquals}}
{{/each}}

<section>
  <div class="container my-5">
    <div class="row">
      <div class="col text-center"><i class="bi bi-receipt"></i><br>FREE SHIPPING</div>
      <div class="col text-center"><i class="bi bi-recycle"></i><br>RETURN WITHIN 30 DAYS</div>
      <div class="col text-center"><i class="bi bi-truck"></i><br>EXPRESS DELIVERY IN STORE MODE</div>
    </div>
  </div>
</section>

<section>
  <div class="container"><hr></div>
</section>

</body>